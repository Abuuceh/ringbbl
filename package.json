{
  "name": "ring",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build-quick": "turbo run build-quick",
    "dev": "turbo run dev --parallel",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "start": "concurrently -c yellow,blue --kill-others \"npm:hb\" \"npm:watch:ui\"",
    "watch:ui": "npm start --prefix homebridge-ui",
    "watch:tests": "jest --watch",
    "example": "DEBUG=ring node -r @swc-node/register ./packages/examples/example.ts",
    "api-example": "DEBUG=ring node -r @swc-node/register ./packages/examples/api-example.ts",
    "record-example": "DEBUG=ring node -r @swc-node/register ./packages/examples/record-example.ts",
    "return-audio-example": "DEBUG=ring node -r @swc-node/register ./packages/examples/return-audio-example.ts",
    "stream-example": "DEBUG=ring node -r @swc-node/register ./packages/examples/stream-example.ts",
    "browser-example": "DEBUG=ring node -r @swc-node/register ./packages/examples/browser-example.ts",
    "auth-cli": "npm run build-quick && ./ring-auth-cli.js",
    "device-data-cli": "npm run build-quick && ./ring-device-data-cli.js",
    "hb": "npm run build && RING_DEBUG=true homebridge -P ./packages/homebridge-ring -U ./.homebridge",
    "push-with-tags": "git push --follow-tags",
    "predeploy": "git pull -r && npm run build && npm run lint && npm run test",
    "postdeploy": "npm run push-with-tags",
    "deploy": "changeset version && git commit -am 'Bump versions for release' && changeset publish",
    "predeploy-beta": "npm run predeploy",
    "posteploy-beta": "npm run postdeploy",
    "deploy-beta": "git pull -r && changeset pre enter beta && changeset version && git add .changeset/pre.json && git commit -am 'Bump versions for beta release' && changeset publish && npm run push-with-tags"
  },
  "devDependencies": {
    "@changesets/cli": "^2.25.2",
    "@swc-node/register": "^1.5.4",
    "turbo": "^1.6.3"
  },
  "workspaces": [
    "packages/*"
  ]
}
